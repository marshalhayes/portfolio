  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean && yarn run build:client",
    "build:client": "run-p build:client:*",
    "build:client:js": "rollup -c rollup.config.js",
    "build:client:css": "postcss ui/styles/main.css -o public/css/main.bundle.css",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
